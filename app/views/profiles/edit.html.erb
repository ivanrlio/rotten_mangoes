<h1>Edit your profile:</h1>
<%= form_for @user, url: edit_profile_path do |f| %>
  <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
      <ul>
        <%= @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname %><br>
  </div>
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %><br>
  <div>
    <%= f.label :password %><br>
    <%= f.text_field :password %><br>
  </div>
  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.text_field :password_confirmation %><br>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>