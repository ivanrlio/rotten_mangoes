<h1> All users in the database </h1>
<%= link_to 'Create a user', new_admin_user_path %>

<%= paginate @users %>

<% @users.each do |user| %>
  <div>
    ID#<%= user.id %> | 
    Full name: <%= link_to user.full_name, admin_user_path(user.id) %> |
    Email: <%= user.email %> |
    Admin: <%= user.admin %> | <br>
    <%= link_to 'edit', edit_admin_user_path(user.id) %>
    <%= link_to 'delete', admin_user_path(user.id), method: :delete, data: { confirm: "You sure?" } %>
  </div>
<% end %>